<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Management</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body{
            background-color: #8ABEB9;
        }
    </style>
</head>

<body>
    <div class="container mt-5">

        <div class="card shadow mb-4">
            <div class="card-body">
                <h2 class="text-center mb-4">
                    <%= editBook ? "Edit Book" : "Add New Book" %>
                </h2>

                <form action="/createBook" method="post" enctype="multipart/form-data">

                    <input type="hidden" name="id" value="<%= editBook ? editBook._id : '' %>">

                    <div class="mb-3">
                        <label class="form-label">Book Title</label>
                        <input type="text" class="form-control" name="title"
                            value="<%= editBook ? editBook.title : '' %>" placeholder="Enter book title" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Author</label>
                        <input type="text" class="form-control" name="author"
                            value="<%= editBook ? editBook.author : '' %>" placeholder="Author name" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Year</label>
                        <input type="number" class="form-control" name="year"
                            value="<%= editBook ? editBook.year : '' %>" placeholder="Year" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="number" class="form-control" name="price"
                            value="<%= editBook ? editBook.price : '' %>" placeholder="Price" required>
                    </div>

                    <div class="mb-3">
                        <% if (editBook && editBook.image) { %>
                            <img src="/uploads/<%= editBook.image %>" width="80" class="rounded">
                        <% } %>

                        <input type="file" name="image" class="form-control" value="<%= editBook ? editBook.image : '' %>">
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn <%= editBook ? 'btn-primary' : 'btn-success' %> px-4">
                            <%= editBook ? "Update Book" : "Add Book" %>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <h3 class="mb-3 text-center">Book List</h3>

                <table class="table table-bordered table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Year</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% books.forEach(book=> { %>
                            <tr>
                                <td>
                                    <%= book.title %>
                                </td>
                                <td>
                                    <%= book.author %>
                                </td>
                                <td>
                                    <%= book.year %>
                                </td>
                                <td>â‚¹ <%= book.price %>
                                </td>
                                <td>
                                    <% if (book.image) { %>
                                        <img src="/uploads/<%= book.image %>" width="50">
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/edit/<%= book._id %>" class="btn btn-sm btn-warning">
                                        Edit
                                    </a>
                                    <a href="/delete/<%= book._id %>" onclick="return confirm('Are you sure?')"
                                        class="btn btn-sm btn-danger">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
